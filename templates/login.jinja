{% extends "base.html" %} 

{% block title %} Login {% endblock %}

{% block content %}

{% with messages = get_flashed_messages() %} 
    {% if messages %} 
      <h1>{{ messages[0] }}</h1>
    {% endif %}
{% endwith %}
    <div class="intro"><h2>Trang login</h2></div>
    <div class="box_information">
        <form action="#" method="post">
          <div class="group">
            <label for="">Input Email</label>
            <div><input type="email" name="email" id="" placeholder="Input your email" /></div>
          </div>
          <div class="group">
            <label for="">Input Password</label>
            <div>
              <input
                type="password"
                name="password"
                id=""
                placeholder="Input your password"
              />
            </div>
          </div>
          <div class="btn"><button type="submit" >Submit</button></div>
        </form>
    </div>

{% endblock %}